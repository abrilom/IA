- hosts: all
  become: true
  tasks:
    - name: Instalar nginx
      ansible.builtin.package:
        name: nginx
        state: present

    - name: Asegurar que nginx esté iniciado y habilitado
      ansible.builtin.service:
        name: nginx
        state: started
        enabled: true

    - name: Crear página de bienvenida
      ansible.builtin.copy:
        dest: /var/www/html/index.html
        content: |
          <html>
          <head><title>Bienvenida</title></head>
          <body><h1>Bienvenido a nginx</h1></body>
          </html>
        owner: root
        group: root
        mode: '0644'